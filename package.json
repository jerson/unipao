{
    "name": "@jerson/unipao",
    "version": "0.1.0",
    "private": true,
    "devDependencies": {
        "babel-preset-react-native-stage-0": "^1.0.1",
        "jest-expo": "^22.0.0",
        "lint-staged": "^5.0.0",
        "prettier": "1.8.2",
        "react-test-renderer": "16.0.0-beta.5"
    },
    "scripts": {
        "start": "react-native start",
        "build:android": "cd android && ./gradlew assembleRelease",
        "android": "react-native run-android",
        "ios": "react-native run-ios",
        "stats:android": "appcenter codepush deployment list -a jeral17/UniPAOAndroid",
        "stats:ios": "appcenter codepush deployment list -a jeral17/UniPAOIOS",
        "push:ios": "appcenter codepush release-react -a jeral17/UniPAOIOS -d Release",
        "push:android": "appcenter codepush release-react -a jeral17/UniPAOAndroid -d Release",
        "push:all": "npm run push:android && npm run push:ios",
        "test": "node node_modules/jest/bin/jest.js --watch",
        "precommit": "lint-staged",
        "prettier": "prettier --write --single-quote 'src/**/*.js'"
    },
    "lint-staged": {
        "*.{js,json,css}": [
            "prettier --write",
            "git add"
        ]
    },
    "jest": {
        "preset": "jest-expo"
    },
    "dependencies": {
        "appcenter": "^1.0.1",
        "appcenter-analytics": "^1.0.1",
        "appcenter-crashes": "^1.0.1",
        "appcenter-push": "^1.0.1",
        "moment": "^2.19.2",
        "numeral": "^2.0.6",
        "prop-types": "^15.6.0",
        "pubsub-js": "^1.5.7",
        "react": "16.0.0-beta.5",
        "react-native": "^0.49.5",
        "react-native-code-push": "^5.2.0-beta",
        "react-native-device-info": "^0.13.0",
        "react-native-htmlview": "^0.12.1",
        "react-native-linear-gradient": "^2.3.0",
        "react-native-modal": "^4.1.1",
        "react-native-modal-datetime-picker": "^4.13.0",
        "react-native-vector-icons": "^4.4.2",
        "react-navigation": "^1.0.0-beta.19",
        "string-format": "^0.5.0",
        "underscore.string": "^3.3.4"
    }
}
